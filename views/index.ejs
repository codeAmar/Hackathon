<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel="icon" type="image/png" href="favicon-32x32.png" sizes="32x32" />
  <link rel="icon" type="image/png" href="favicon-16x16.png" sizes="16x16" />
  <link rel='stylesheet' href='/stylesheets/styles.css' />
</head>

<body class="wrapper">
  <div class="audio-control">
    <p id="audio-control" class="white-circle">
      <img src="/images/people.svg">
      <canvas class="visualizer"></canvas>
    </p>
    <p>
      <span id="message"></span>
    </p>
    <p>
      <input type="password" id="ACCESS_ID" name="ACCESS ID" placeholder="ACCESS ID" value="<%= accessId %>" />
    </p>
    <p>
      <input type="password" id="SECRET_KEY" name="SECRET KEY" placeholder="SECRET KEY" value="<%= secretKey %>" />
    </p>
    <p>
      <input type="text" id="BOT" name="BOT" placeholder="BOT" value="<%= botName %>" />
    </p>
  </div>
  <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"></script>
  <script src="https://sdk.amazonaws.com/js/aws-sdk-2.48.0.min.js"></script>
  <script src="/javascripts/aws-lex-audio.js" type="text/javascript"></script>
  <script src="/javascripts/renderer.js" type="text/javascript"></script>
  <script type="text/javascript">
    var waveform = window.Waveform();
    var message = document.getElementById('message');
    var config, conversation, bucket;
    message.textContent = 'Passive';

    document.getElementById('audio-control').onclick = function () {

      AWS.config.credentials = new AWS.Credentials(document.getElementById('ACCESS_ID').value, document.getElementById(
        'SECRET_KEY').value, null);
      AWS.config.region = 'us-east-1';

      config = {
        lexConfig: {
          botName: document.getElementById('BOT').value
        }
      };

      bucket = new AWS.S3({
        params: {
          Bucket: 'hackathon-wavefiles'
        }
      });

      conversation = new LexAudio.conversation(config, function (state) {
        message.textContent = state + '...';
        if (state === 'Listening') {
          waveform.prepCanvas();
        }
        if (state === 'Sending') {
          waveform.clearCanvas();
        }
      }, function (upload) {
          bucket.upload({
            Key: `${new Date().getTime()}.wav`,
            ContentType: 'audio/wav',
            Body: upload
          }, function (err, data) {
              if (err) console.log('Error Uploading File to S3 Bucket');
          });
      }, function (data) {
        console.log('Transcript: ', data.inputTranscript, ", Response: ", data.message);
      }, function (error) {
        message.textContent = error;
      }, function (timeDomain, bufferLength) {
        waveform.visualizeAudioBuffer(timeDomain, bufferLength);
      });
      conversation.advanceConversation();
    };
  </script>
</body>

</html>